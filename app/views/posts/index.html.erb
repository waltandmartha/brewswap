<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% unless @posts.nil? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image data</th>
      <th>User</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.image_data %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'View user profile', profile_path(post.user_id) %> </td>  
        <td><%= link_to 'View post', post %></td>

            <% end %>
 
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>
